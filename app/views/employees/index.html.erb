<div class="panel-heading">
  
  <div class="row">
    <div class="col-md-10">
      <%= form_for "", url: employees_path, role: "search", method: :get do %>
        <div class="row">
          <div class="col-md-8">
            <%= text_field_tag :search, @search_term, placeholder: "Search...", class: "form-control col-md-10" %>
          </div>
          <%= submit_tag "search", class: "btn btn-default btn-primary col-md-2" %>
        </div>
      <% end %>
    </div>

    <div class="col-md-2">
      <%= link_to "Create New", new_employee_path, class: "btn btn-default btn-primary pull-right" %>
    </div>
  </div>

  <h2 class="text-center">All employees details</h2>
</div>

<div class="panel-body">
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone Number</th>
        <th scope="col">Show</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td> <%= employee.id %> </td>
          <td> <%= employee.name %> </td>
          <td> <%= employee.email %> </td>
          <td> <%= employee.phone_number %> </td>
          <td> <%= link_to "Show", employee, class: "btn btn-default btn-success" %> </td>
          <td> <%= link_to "Edit", edit_employee_path(employee), class: "btn btn-default btn-primary" %> </td>
          <td> <%= link_to "Delete", employee, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-danger" %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
