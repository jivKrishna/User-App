<% if @employee.errors.any? %>
   <h2><%= pluralize(@employee.errors.count, "error") %> prevented from saving! </h2>

  <ul class="danger">
    <% @employee.errors.full_messages.each do |msg| %>
      <li class="text-danger"> <%= msg %> </li>
    <% end %>
  </ul>
  
<% end %>


<%= form_for @employee do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "Enter employee name", class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, placeholder: "Enter email", class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, placeholder: "Enter phone number", class: "form-control", required: true %>
  </div>

  <div>
    <%= form.submit "submit", class: "btn btn-default btn-primary" %>
  </div>
<% end %>