<%= form_for @image do |image|%>
  <div class="form-group">
    <%= image.label :title %>
    <%= image.text_field :title, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= image.label :img %>
    <%= image.file_field :img, class: "form-control-file" %>
  </div>

  <div class="form-group">
    <%= image.label :description %>
    <%= image.text_area :description, class: "form-control form-control-lg" %>
  </div>

  <div class="submit">
    <%= image.submit "upload", class: "btn btn-default btn-primary" %>
  </div>
<% end %>