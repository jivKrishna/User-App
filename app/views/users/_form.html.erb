<% if @user.errors.any? %>
   <h2><%= pluralize(@user.errors.count, "error") %> prevented from saving! </h2>

  <ul class="danger">
    <% @user.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
  
<% end %>


<%= form_for @user do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "Enter user name", class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, placeholder: "Enter email", class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :mobile_no %>
    <%= form.text_field :mobile_no, placeholder: "Enter mobile number", class: "form-control", required: true %>
  </div>

  <div>
    <%= form.submit "create", class: "btn btn-default btn-primary" %>
  </div>
<% end %>