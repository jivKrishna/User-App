<div class="panel-head">
  <%= link_to "Create User", new_user_path, class: "btn btn-default btn-primary" %>

  <h2>All Users details</h2>
</div>

<div class="panel-body">
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Mobile Number</th>
        <th scope="col">Show</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td> <%= user.id %> </td>
          <td> <%= user.name %> </td>
          <td> <%= user.email %> </td>
          <td> <%= user.mobile_no %> </td>
          <td> <%= link_to "Show", users_path(user), class: "btn btn-default btn-primary" %> </td>
          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="panel-footer">
  <%= link_to "Back", root_path, class: "btn btn-default btn-primary " %>
</div>