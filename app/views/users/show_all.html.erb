<div class="panel-head">
  <%= link_to "Create User", new_user_path, class: "btn btn-default btn-primary" %>

  <h2>All Users details</h2>
</div>

<div class="panel-body">
  <tabel class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Mobile Number</th>
        <th scope="col">Show</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td> <%= user.id %> </td>
          <td> <%= user.name %> </td>
          <td> <%= user.email %> </td>
          <td> <%= user.mobile_no %> </td>
          <td> <%= link_to "Show", users_path(user) %> </td>
          <td> <% link_to "Edit", edit_user_path %> </td>
          <td> <%= link_to "Delete", method: :delete, data: {confirm: "Are you sure?"} %> </td>
        </tr>
      <% end %>
    </tbody>
  </tabel>
</div>

<div class="panel-footer">
  <%= link_to, "Back", root_path, class: "btn btn-default btn-primary " %>
</div>