<!DOCTYPE html>
<html>
  <head>
    <title>UserApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1 class="text-center header position-sticky"> <%= link_to "User App", root_path %></h1>
    </header>
    <div class="container">
      <div class="col-md-10 col-md-offset-1">
        <div class="row">
          <div class="panel panel-default">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>

    <footer class="fixed-bottom">
      <p class="text-center">&copy; copyright ISO 20001</p>
    </footer>
  </body>
</html>
